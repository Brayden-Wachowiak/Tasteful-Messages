---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Chewy&family=Indie+Flower&family=Lacquer&family=Protest+Revolution&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css2?family=Chewy&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	*{
		margin: 0;
		padding: 0;
	}
	html {
		font-family: Roboto;
		font-weight: 300;
	}
	body{
		min-height: 100vh;
		min-width: 100vw;
	}

	h1, h2, h3{
        color: black;
        font-weight: 100;
    }


	@media(min-width: 1100px) {

		body{
			display: grid;
			grid-template-columns: 1fr 10fr 1fr;
			grid-template-rows: 1fr;
			background-color: #d2b48c;
		}
	}

	@media(max-width: 1100px) {
	}
</style>
