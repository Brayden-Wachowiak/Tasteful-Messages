---
import HomeCard from "./HomeCard.astro";
import projectImage from "./imgs/sponge_1.jpg"
import aboutImage from "./imgs/sponge_2.jpg"
import contactImage from "./imgs/sponge_3.jpg"
import resumeImage from "./imgs/sponge_4.jpg"
---

<div class="home-layout-container">
    <div class="home-title">
        <h2>Featured Projects</h2>
    </div>
    <div class="card-container">
        <HomeCard card={1} text="PROJECT 1" image={projectImage.src}/>
        <HomeCard card={2} text="PROJECT 2" image={aboutImage.src}/>
        <HomeCard card={3} text="PROJECT 3" image={contactImage.src}/>
        <HomeCard card={4} text="PROJECT 4" image={resumeImage.src}/>
    </div>
</div>

<style>
    @media(min-width: 1100px) {
        .home-layout-container{
            margin: 2vw 2vw 2vw 0;
            padding: 10px;
            grid-area: "section";
            display: grid;
            border-top: 1px #a6a6a6 solid;
            grid-template-columns: 1fr;
            grid-template-rows: 50px 50px 1fr;
            color: white;
            background-color: #222222;
            row-gap: 10px;
        }

        .card-container{
            height: 100%;
            display: flex;
            grid-row: 3;
            grid-column: 1;
            flex-direction: row;
            column-gap: 15px;
        }

        .home-title{
            grid-row: 2;
            grid-column: 1;
            align-self: center;
            justify-self: center;
        }
    }

    @media(max-width: 1100px) {
    }
</style>